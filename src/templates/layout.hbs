<!DOCTYPE html>
<html>
	<head>
		<title>{{ head.title }}</title>
		<link rel="stylesheet" href="/css/main.css" />
	</head>
	<body class="__docs_detailPage">
		{{> header}}

		<div class="flex flex--noGutters flex--column atMedium_flex--row">
			<div class="flex-item flex-item--1">
				<div class="stripe stripe--collection __docs_height--full"><div class="section border--none">
					<ul>
							{{#each collections as |value key|}}
								{{#each this}}
									{{#if_eq key ../../collection}}
										<li>
											<div class="chunk">
												<a href="/{{path}}">{{title}}</a>
											</div>
										</li>
									{{/if_eq}}
								{{/each}}
							{{/each}}
					</ul>
				</div></div>
			</div>
			<div class="flex-item flex-item--3">
				<div class="stripe stripe--collection __docs_height--full">
					<div class="section border--none">
						<div class="card">
							<div class="section border--none">
								<div class="runningText bounds __docs_bounds--runningText">
									{{{ contents }}}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<script id="__bs_script__">
			document.write(
				"<script async src='http://HOST:8181/browser-sync/browser-sync-client.js?v=2.18.11'><\/script>"
					.replace("HOST", location.hostname)
			);
		</script>
		<script>
			const hamburger = document.querySelector('.js_hamburger');
			const mainNav = document.querySelector('.js_mainNav');
			console.log(hamburger);
			hamburger.addEventListener('click', (e) => {
				mainNav.classList.toggle('display--none');
			});
		</script>
	</body>
</html>
