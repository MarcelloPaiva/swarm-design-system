<!DOCTYPE html>
<html>
	<head>
		<title>{{ head.title }}</title>
		<link rel="stylesheet" href="/css/main.css" />
	</head>
	<body class="__docs_detailPage">
		{{> header}}

		<div class="section border--none">
			<div class="bounds">
				<div class="section border--none">

					<div class="chunk">
						<h2 class="text--pageTitle">{{arrToStr collection}}</h2>
					</div>

					<div class="runningText __docs_bounds--runningText">
						{{{ contents }}}
					</div>

				</div>
			</div>
		</div>

		<script id="__bs_script__">
			document.write(
				"<script async src='http://HOST:8181/browser-sync/browser-sync-client.js?v=2.18.11'><\/script>"
					.replace("HOST", location.hostname)
			);
		</script>
		<script>
			const hamburger = document.querySelector('.js_hamburger');
			const mainNav = document.querySelector('.js_mainNav');
			console.log(hamburger);
			hamburger.addEventListener('click', (e) => {
				mainNav.classList.toggle('display--none');
			});
		</script>
	</body>
</html>
